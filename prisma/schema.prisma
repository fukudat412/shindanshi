generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js 認証モデル
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?       @map("email_verified")
  image         String?
  password      String?
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  accounts      Account[]
  sessions      Session[]
  progress      UserProgress[]
  mockExams     MockExam[]
  examAttempts  ExamAttempt[]
  bookmarks     Bookmark[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Subject {
  id        String    @id @default(cuid())
  name      String
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
  exams     Exam[]
  topics    Topic[]

  @@map("subjects")
}

// 論点（Topic）モデル - 問題を論点単位で管理する
model Topic {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  subjectId   String    @map("subject_id")
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  subject     Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  articles    Article[]
  quizzes     Quiz[]

  @@map("topics")
}

model Article {
  id        String   @id @default(cuid())
  subjectId String   @map("subject_id")
  topicId   String?  @map("topic_id")
  title     String
  bodyMd    String   @map("body_md") @db.Text
  tags      String[] @default([])
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  topic     Topic?   @relation(fields: [topicId], references: [id], onDelete: SetNull)
  quizzes   Quiz[]

  @@map("articles")
}

model Quiz {
  id            String         @id @default(cuid())
  articleId     String         @map("article_id")
  topicId       String?        @map("topic_id")
  question      String         @db.Text
  quizType      QuizType       @default(TRUE_FALSE) @map("quiz_type")
  phase         QuizPhase      @default(UNDERSTAND)
  answer        String
  choices       String[]       @default([])
  explanation   String?        @db.Text
  order         Int            @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  article       Article        @relation(fields: [articleId], references: [id], onDelete: Cascade)
  topic         Topic?         @relation(fields: [topicId], references: [id], onDelete: SetNull)
  examQuestions ExamQuestion[]
  examAnswers   ExamAnswer[]

  @@map("quizzes")
}

enum QuizType {
  TRUE_FALSE
  SHORT_TEXT
  NUMBER
  MULTIPLE_CHOICE
}

// 学習フェーズ（問題の難易度・目的による分類）
enum QuizPhase {
  INTRO      // 導入：定義確認など基礎的な問題
  UNDERSTAND // 理解：判断基準、手順など
  RETAIN     // 定着：ひっかけ問題、逆方向の問題
  EXAM       // 試験対策：ミニケース、実践的な問題
}

model UserProgress {
  id             String         @id @default(cuid())
  userId         String         @map("user_id")
  targetType     TargetType     @map("target_type")
  targetId       String         @map("target_id")
  status         ProgressStatus @default(NOT_STARTED)
  score          Int?
  lastAccessedAt DateTime       @default(now()) @map("last_accessed_at")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 間隔反復（Spaced Repetition）用フィールド
  easeFactor   Float     @default(2.5) @map("ease_factor")
  interval     Int       @default(0)
  nextReviewAt DateTime? @map("next_review_at")
  repetitions  Int       @default(0)
  attemptCount Int       @default(0) @map("attempt_count")

  @@unique([userId, targetType, targetId])
  @@index([userId])
  @@index([targetType, targetId])
  @@index([userId, nextReviewAt])
  @@map("user_progress")
}

enum TargetType {
  ARTICLE
  QUIZ
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

// ブックマーク機能
model Bookmark {
  id         String     @id @default(cuid())
  userId     String     @map("user_id")
  targetType TargetType @map("target_type")
  targetId   String     @map("target_id")
  createdAt  DateTime   @default(now()) @map("created_at")
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetId])
  @@index([userId])
  @@index([targetType, targetId])
  @@map("bookmarks")
}

// 過去問演習モード用モデル
model Exam {
  id           String         @id @default(cuid())
  year         Int            // 年度
  session      Int            // 回数（1回目、2回目など）
  name         String         // 試験名（例：「令和5年度 第1回 中小企業診断士試験」）
  subjectId    String         @map("subject_id")
  timeLimit    Int            @map("time_limit") // 制限時間（分）
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  subject      Subject        @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  questions    ExamQuestion[]
  attempts     ExamAttempt[]

  @@unique([year, session, subjectId])
  @@map("exams")
}

model ExamQuestion {
  id        String   @id @default(cuid())
  examId    String   @map("exam_id")
  quizId    String   @map("quiz_id")
  order     Int      // 問題の順番
  createdAt DateTime @default(now())
  exam      Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@unique([examId, quizId])
  @@unique([examId, order])
  @@map("exam_questions")
}

model ExamAttempt {
  id            String            @id @default(cuid())
  userId        String            @map("user_id")
  examId        String            @map("exam_id")
  status        ExamAttemptStatus @default(IN_PROGRESS)
  startedAt     DateTime          @default(now()) @map("started_at")
  finishedAt    DateTime?         @map("finished_at")
  remainingTime Int?              @map("remaining_time") // 残り時間（秒）- 中断時に保存
  score         Int?              // 得点（%）
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  exam          Exam              @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers       ExamAnswer[]

  @@index([userId])
  @@index([examId])
  @@map("exam_attempts")
}

model ExamAnswer {
  id           String      @id @default(cuid())
  attemptId    String      @map("attempt_id")
  quizId       String      @map("quiz_id")
  userAnswer   String?     @map("user_answer")
  isCorrect    Boolean?    @map("is_correct")
  answeredAt   DateTime?   @map("answered_at")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  attempt      ExamAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  quiz         Quiz        @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@unique([attemptId, quizId])
  @@index([quizId])
  @@map("exam_answers")
}

enum ExamAttemptStatus {
  IN_PROGRESS
  PAUSED
  COMPLETED
}

// 模擬試験モデル
model MockExam {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  title           String?         // 試験名（オプション）
  subjectIds      String[]        @map("subject_ids") // 選択した科目のID
  questionCount   Int             @map("question_count")
  timeLimit       Int             @map("time_limit") // 制限時間（分）
  status          MockExamStatus  @default(IN_PROGRESS)
  startedAt       DateTime        @default(now()) @map("started_at")
  pausedAt        DateTime?       @map("paused_at")
  pausedDuration  Int             @default(0) @map("paused_duration") // 一時停止合計時間（秒）
  completedAt     DateTime?       @map("completed_at")
  score           Int?            // 正解数
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers         MockExamAnswer[]

  @@index([userId])
  @@index([userId, status])
  @@map("mock_exams")
}

model MockExamAnswer {
  id          String    @id @default(cuid())
  mockExamId  String    @map("mock_exam_id")
  quizId      String    @map("quiz_id")
  userAnswer  String?   @map("user_answer") // null = 未回答
  isCorrect   Boolean?  @map("is_correct")
  isMarked    Boolean   @default(false) @map("is_marked") // 後で見直すマーク
  timeSpent   Int       @default(0) @map("time_spent") // 回答にかかった時間（秒）
  order       Int       // 出題順序
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  mockExam    MockExam  @relation(fields: [mockExamId], references: [id], onDelete: Cascade)

  @@unique([mockExamId, quizId])
  @@index([mockExamId])
  @@map("mock_exam_answers")
}

enum MockExamStatus {
  IN_PROGRESS  // 実行中
  PAUSED       // 一時停止中
  COMPLETED    // 完了
  ABANDONED    // 放棄
}
